<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tabs"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/vaulticon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.tabs.MainAct"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.tabs.InboxActivity"
            android:label="@string/title_activity_inbox" >
        </activity>
        <activity
            android:name="com.example.tabs.OutboxActivity"
            android:label="@string/title_activity_outbox" >
        </activity>
        <activity
            android:name="com.example.tabs.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.example.tabs.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
    </application>

</manifest>